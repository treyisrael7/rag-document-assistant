# ===========================================
# RAG Assistant - Root env (copy to .env)
# Used by: docker-compose, pgAdmin
# ===========================================

# --- Postgres (Docker default) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_assistant

# --- API (apps/api) ---
# AWS (omit for local dev - uses ./uploads)
AWS_REGION=us-east-1
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_assistant
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/rag_assistant
API_HOST=0.0.0.0
API_PORT=8000
DEMO_KEY=
MAX_PDF_MB=10
MAX_PDF_PAGES=20
MAX_CHUNKS_PER_DOC=300
TOP_K_MAX=8
MAX_COMPLETION_TOKENS=500
CHUNK_SIZE=512
CHUNK_OVERLAP=128
MIN_CHUNK_CHARS=25

# OpenAI embeddings (required for ingestion)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIM=1536

# --- Web (apps/web) ---
NEXT_PUBLIC_API_URL=http://localhost:8000

# --- pgAdmin (override default admin/admin) ---
PGADMIN_EMAIL=you@example.com
PGADMIN_PASSWORD=your-secure-password
