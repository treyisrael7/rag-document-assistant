# ===========================================
# RAG Assistant - Root env reference
# Copy to .env and override as needed.
# Per-service .env files: apps/api/.env.example, apps/web/.env.example
# ===========================================

# --- Postgres (Docker default) ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_assistant

# --- API (apps/api) ---
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_assistant
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/rag_assistant
API_HOST=0.0.0.0
API_PORT=8000

# --- Web (apps/web) ---
NEXT_PUBLIC_API_URL=http://localhost:8000
